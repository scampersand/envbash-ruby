root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,rb,yaml,yml}]
indent_size = 2

# Tab indents for Makefile
[Makefile]
indent_style = tab
